{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react",
    "@babel/preset-flow"
  ],
  "plugins": [
    [
      "macros",
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "test": "./test",
          "Components": "./src/Components",
          "locales": "./src/locales",
          "underscore": "lodash"
        }
      }
    ]
  ]
}
